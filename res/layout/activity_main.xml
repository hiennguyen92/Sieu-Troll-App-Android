<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_back"
        android:text="Chơi Luôn Sao Phải Xoắn" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCauSo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/troll" />

    <TextView
        android:id="@+id/txtCau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNoiDungCauHoi"
        android:layout_centerHorizontal="true"
        android:text="Siêu Troll"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000ff"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btnDanhSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAbout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back"
        android:text="Danh Sách Các Thánh" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnAbout"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back"
        android:text="Siêu Thoát" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnExit"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnDanhSach"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back"
        android:text="Thông Tin Thằng Viết" />

    <TextView
        android:id="@+id/txtNoiDungCauHoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:text="Troll Level Max"
        android:textColor="#0000ff" />



</RelativeLayout>
