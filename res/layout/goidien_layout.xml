<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="290dp"
    android:layout_height="150dp"
    android:background="@drawable/popup_bg"
    android:orientation="vertical" >
 
<TextView
    android:id="@+id/txtCall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Chọn người bạn muốn hỏi?"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#ffffff" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageBillgates"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/billgates" />

    <ImageView
        android:id="@+id/imageOpama"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/opama" />

    <ImageView
        android:id="@+id/imageGSXOAY"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/gsxoay" />

</LinearLayout>
 
</LinearLayout>
